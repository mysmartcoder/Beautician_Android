<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:background="@color/white_secondary"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5">

        <TextView
            android:id="@+id/dialog_update_email_textview_title"
            style="@style/textview_sub_title_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myPrimaryColor"
            android:gravity="center"
            android:padding="@dimen/dimen_10"
            android:text="@string/lbl_edit_emial"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10">

            <EditText
                android:id="@+id/dialog_update_email_edittext_email"
                style="@style/edittext_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:hint="@string/hint_enter_new_emailid"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/dialog_update_email_textview_rquest_code"
                style="@style/button_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:padding="@dimen/dimen_10"
                android:text="@string/lbl_request_a_verification_code"
                android:visibility="gone" />

            <EditText
                android:id="@+id/dialog_update_email_edittext_verify_code"
                style="@style/edittext_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:hint="@string/hint_verify_code"
                android:inputType="number"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_update_email_textview_submit"
                style="@style/button_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:gravity="center"
                android:text="@string/lbl_submit" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>