<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:background="@color/white_secondary"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5">

        <TextView
            style="@style/textview_sub_title_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myPrimaryColor"
            android:gravity="center"
            android:padding="@dimen/dimen_10"
            android:text="@string/lbl_rate_user"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10">

            <TextView
                android:id="@+id/dialog_rate_user_textview_msg"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:singleLine="false"
                android:text="@string/alt_msg_rate_user" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@color/white_secondary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_rate_user_textview_yes"
                    style="@style/textview_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableStart="@drawable/icon_radio_btn_unselect"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_yes"
                    android:textColor="@color/myPrimaryColor" />

                <TextView
                    android:id="@+id/dialog_rate_user_textview_may_be"
                    style="@style/textview_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableStart="@drawable/icon_radio_btn_unselect"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_may_be"
                    android:textColor="@color/myPrimaryColor" />

                <TextView
                    android:id="@+id/dialog_rate_user_textview_no"
                    style="@style/textview_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableStart="@drawable/icon_radio_btn_unselect"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_no"
                    android:textColor="@color/myPrimaryColor" />

            </LinearLayout>

            <EditText
                android:id="@+id/dialog_rate_user_edittext_comments"
                style="@style/edittext_app"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_box"
                android:padding="@dimen/dimen_5"
                android:singleLine="false"
                android:background="@drawable/white_square"
                android:gravity="top|left"
                android:hint="@string/lbl_comments_" />

            <TextView
                android:id="@+id/dialog_rate_user_textview_submit"
                style="@style/button_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/lbl_submit" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>