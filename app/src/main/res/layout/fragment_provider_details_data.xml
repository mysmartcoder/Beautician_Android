<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/fragment_provider_details_data_textview_service_name"
                    style="@style/textview_sub_title_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_5"
                    android:singleLine="false"
                    android:textColor="@color/myPrimaryColor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment_provider_details_data_textview_service_dec"
                    style="@style/textview_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_5"
                    android:singleLine="false"
                    android:textColor="@color/myPrimaryColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_5"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_provider_details_data_textview_service_avg_time"
                    style="@style/textview_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_5"
                    android:textColor="@color/myPrimaryColor" />


                <TextView
                    android:id="@+id/fragment_provider_details_data_textview_service_price"
                    style="@style/textview_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_5"
                    android:text="@string/lbl_average_price"
                    android:textColor="@color/myPrimaryColor" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0_5"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/myPrimaryColor" />


        <beautician.beauty.android.views.HorizontalListView
            android:id="@+id/fragment_provider_details_data_listview_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150"
            android:layout_marginStart="@dimen/dimen_2"
            android:layout_marginEnd="@dimen/dimen_2"
            android:layout_marginTop="@dimen/dimen_10"
            android:descendantFocusability="blocksDescendants"
            android:focusableInTouchMode="false"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/fragment_provider_details_data_linear_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_provider_details_data_textview_comments"
                style="@style/textview_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_10"
                android:textColor="@color/myPrimaryColor" />

            <RelativeLayout
                android:id="@+id/fragment_provider_details_data_relative_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@drawable/bg_edittext">

                <TextView
                    android:id="@+id/fragment_provider_details_data_comments"
                    style="@style/textview_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/more"
                    android:paddingBottom="@dimen/dimen_5"
                    android:paddingEnd="@dimen/dimen_10"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_10" />

                <TextView
                    android:id="@+id/fragment_provider_details_data_textview_comments_by"
                    style="@style/textview_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_provider_details_data_comments"
                    android:layout_toStartOf="@+id/more"
                    android:paddingBottom="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10"
                    android:paddingStart="@dimen/dimen_10" />


                <ImageView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/fragment_provider_details_data_textview_comments_by"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/fragment_provider_details_data_comments"
                    android:background="@color/myPrimaryColor"
                    android:contentDescription="@string/app_name"
                    android:gravity="center"
                    android:padding="@dimen/dimen_2"
                    android:src="@drawable/icon_more_comment_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5"
                android:text="@string/lbl_quentity"
                android:textColor="@color/myPrimaryColor" />

            <ImageView
                android:id="@+id/fragment_provider_details_data_imageview_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_minus_value" />

            <TextView
                android:id="@+id/fragment_provider_details_data_textview_quentity_value"
                style="@style/textview_sub_title_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_5"
                android:layout_marginStart="@dimen/dimen_5"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:minWidth="@dimen/dimen_60"
                android:padding="@dimen/dimen_8"
                android:textColor="@color/myPrimaryColor" />

            <ImageView
                android:id="@+id/fragment_provider_details_data_imageview_plush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_plush_value" />

            <ImageView
                android:id="@+id/fragment_provider_details_data_imageview_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_share" />

            <ImageView
                android:id="@+id/fragment_provider_details_data_imageview_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_flag" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>