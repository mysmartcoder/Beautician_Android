<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        android:background="@color/white_secondary"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_7">


            <TextView
                android:id="@+id/dialog_check_availability_textview_msg"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10"
                android:singleLine="false"
                android:text="@string/alt_msg_check_availibility" />

            <TextView
                android:id="@+id/dialog_check_availability_textview_suggested_providers"
                style="@style/textview_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/dimen_10"
                android:paddingStart="@dimen/dimen_10"
                android:singleLine="false"
                android:textStyle="bold"
                android:visibility="visible"
                android:text="@string/lbl_suggested_provider" />

            <beautician.beauty.android.views.HorizontalListView
                android:id="@+id/dialog_check_availability_horizontallist_providers"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                app:dividerWidth="@dimen/dimen_2"
                android:layout_height="@dimen/view_pager_feature_user"
                android:layout_marginLeft="@dimen/dimen_2"
                android:layout_marginRight="@dimen/dimen_2"
                android:visibility="gone" />


            <TextView
                android:id="@+id/dialog_check_availability_textview_book"
                style="@style/button_app"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lbl_book_an_appointment" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>