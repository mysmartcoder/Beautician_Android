<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_search_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_square"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">


        <EditText
            android:id="@+id/fragment_search_edittext_input"
            style="@style/edittext_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lbl_search"
            android:padding="@dimen/dimen_10"
            android:singleLine="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_search_textview_search"
                style="@style/button_app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/lbl_search" />

            <TextView
                android:id="@+id/fragment_search_textview_advanced_searched"
                style="@style/button_app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/lbl_advance_search" />

        </LinearLayout>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:layout_marginTop="@dimen/dimen_5"
        android:id="@+id/fragment_search_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_pager_feature_user" />


    <GridView
        android:id="@+id/fragment_search_gridview_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:horizontalSpacing="@dimen/dimen_10"
        android:numColumns="2"
        android:verticalSpacing="@dimen/dimen_10" />


</LinearLayout>