<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_calendar_title"
    android:clickable="true">

    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_button_selector"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/dimen_15"
        android:src="@drawable/icon_previous" />

    <TextView
        android:id="@+id/dateTitle"
        style="@style/CalendarView.MonthTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/leftButton"
        android:layout_toStartOf="@+id/rightButton"
        android:gravity="center"
        android:tag="dateTitle"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_button_selector"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/dimen_15"
        android:src="@drawable/icon_next" />
</RelativeLayout>