<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_150"
    android:layout_height="@dimen/dimen_150"
    android:focusableInTouchMode="false"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        android:background="@drawable/bg_service_picture"
        android:gravity="center"
        android:padding="@dimen/dimen_5">


        <ImageView
            android:id="@+id/row_service_picture"
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_150"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_user_profile" />

        <ImageView
            android:id="@+id/row_service_picture_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/row_service_picture_option"
            android:contentDescription="@string/app_name"
            android:src="@android:drawable/ic_menu_edit"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/row_service_picture_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/dimen_2"
            android:src="@drawable/icon_edit_service"
            android:visibility="visible" />

    </RelativeLayout>


</RelativeLayout>