<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:background="@drawable/white_square"
            android:orientation="vertical"
            android:padding="@dimen/dimen_2">

            <TextView
                style="@style/textview_sub_title_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/lbl_select_your_ads"
                android:textColor="@color/myPrimaryColor"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_buy_ads_textview_category_page"
                    style="@style/textview_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/icon_radio_btn_selected"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_category_page" />

                <TextView
                    android:id="@+id/fragment_buy_ads_spinner_category"
                    style="@style/edittext_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/icon_add_beauty_service_down_arrow"
                    android:padding="@dimen/dimen_10"
                    android:layout_margin="@dimen/dimen_5"
                    android:singleLine="false"
                    android:text="@string/hint_service_category"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/fragment_buy_ads_textview_search_result"
                    style="@style/textview_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/icon_radio_btn_unselect"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_search_result_ads" />

                <TextView
                    android:id="@+id/fragment_buy_ads_textview_suggested_ads"
                    style="@style/textview_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_10"
                    android:drawableStart="@drawable/icon_radio_btn_unselect"
                    android:padding="@dimen/dimen_5"
                    android:text="@string/lbl_suggested_ads" />


            </LinearLayout>

            <TextView
                style="@style/textview_sub_title_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/lbl_select_period_time"
                android:textColor="@color/myPrimaryColor"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:background="@color/white"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/fragment_buy_ads_textview_start_date"
                    style="@style/textview_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10"
                    android:text="@string/lbl_start_date" />

                <TextView
                    android:id="@+id/fragment_buy_ads_textview_end_date"
                    style="@style/textview_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10"
                    android:text="@string/lbl_end_date" />
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_buy_ads_textview_save"
                style="@style/button_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/lbl_submit" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragment_buy_ads_linear_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:background="@drawable/white_square"
            android:orientation="vertical"
            android:padding="@dimen/dimen_2"
            android:visibility="gone">

            <TextView
                style="@style/textview_sub_title_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:text="@string/lbl_add_summary"
                android:textColor="@color/myPrimaryColor"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">


                    <TextView
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5"
                        android:singleLine="false"
                        android:text="@string/lbl_start_date_"
                        android:textColor="@color/myPrimaryColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5"
                        android:background="@color/white_secondary" />

                    <TextView
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5"
                        android:singleLine="false"
                        android:text="@string/lbl_end_date_"
                        android:textColor="@color/myPrimaryColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5"
                        android:background="@color/white_secondary" />

                    <TextView
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5"
                        android:singleLine="false"
                        android:text="@string/lbl_price_"
                        android:textColor="@color/myPrimaryColor" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5"
                        android:background="@color/white_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_buy_ads_textview_start_date_value"
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5"
                        android:textColor="@color/myPrimaryColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5"
                        android:background="@color/white_secondary" />

                    <TextView
                        android:id="@+id/fragment_buy_ads_textview_end_date_value"
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5"
                        android:textColor="@color/myPrimaryColor" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5"
                        android:background="@color/white_secondary" />

                    <TextView
                        android:id="@+id/fragment_buy_ads_textview_price"
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5"
                        android:text="10$"
                        android:textColor="@color/myPrimaryColor" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5"
                        android:background="@color/white_secondary" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/textview_sub_title_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/lbl_payment"
                android:textColor="@color/myPrimaryColor"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/fragment_buy_ads_checkbox_wallet"
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:button="@drawable/checkbox_selector"
                        android:drawablePadding="@dimen/dimen_5"
                        android:padding="@dimen/dimen_5"
                        android:text="@string/lbl_use_beautician_wallet"
                        android:textColor="@color/myPrimaryColor" />

                    <TextView
                        android:id="@+id/fragment_buy_ads_textview_wallet_amount"
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/dimen_5"
                        android:text="@string/lbl_default"
                        android:textColor="@color/myPrimaryColor" />

                    <TextView
                        android:id="@+id/fragment_buy_ads_textview_current_balance"
                        style="@style/textview_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_buy_ads_checkbox_wallet"
                        android:layout_marginStart="@dimen/dimen_25"
                        android:text="@string/lbl_your_current_balance"
                        android:textColor="@color/white_secondary" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/fragment_buy_ads_linear_payment_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:background="@color/white_secondary" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5">

                        <TextView

                            style="@style/textview_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:padding="@dimen/dimen_5"
                            android:text="@string/lbl_select_option_to_pay"
                            android:textColor="@color/myPrimaryColor" />

                        <TextView
                            android:id="@+id/fragment_buy_ads_textview_current_remain_balance"
                            style="@style/textview_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/dimen_5"
                            android:text="@string/lbl_default"
                            android:textColor="@color/myPrimaryColor" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/fragment_buy_ads_textview_sadad"
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableStart="@drawable/icon_radio_btn_unselect"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5"
                        android:text="@string/lbl_sadad"
                        android:textColor="@color/myPrimaryColor" />

                    <TextView
                        android:id="@+id/fragment_buy_ads_textview_credit_card"
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableStart="@drawable/icon_radio_btn_unselect"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5"
                        android:text="@string/lbl_credit_card"
                        android:textColor="@color/myPrimaryColor" />

                    <TextView
                        android:id="@+id/fragment_buy_ads_textview_paypal"
                        style="@style/textview_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableStart="@drawable/icon_radio_btn_unselect"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5"
                        android:text="@string/lbl_paypal"
                        android:textColor="@color/myPrimaryColor" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_buy_ads_textview_pay"
                style="@style/button_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/lbl_pay" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>